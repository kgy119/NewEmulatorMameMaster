<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:installLocation="preferExternal">

	<!-- 기존 권한들 -->
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.INTERNET"/>

	<!-- 네트워크 상태 확인 권한 추가 -->
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<supports-screens
		android:largeScreens="true"
		android:normalScreens="true"
		android:smallScreens="true"
		android:anyDensity="true"
		android:resizeable="true"/>

	<uses-feature android:name="android.hardware.touchscreen" android:required="false"/>
	<uses-feature android:name="android.hardware.gamepad" android:required="false" />

	<application android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:allowClearUserData="true"
		android:hardwareAccelerated="true"
		android:isGame="true"
		android:banner="@drawable/banner"
		android:requestLegacyExternalStorage="true"
		android:maxSdkVersion="29"
		android:usesCleartextTraffic="true"
		android:allowBackup="false"
		android:hasFragileUserData="true">

		<!-- 스플래시 액티비티 - 메인 런처로 설정 -->
		<activity android:name="com.ingcorp.webhard.SplashActivity"
			android:theme="@style/SplashTheme"
			android:exported="true"
			android:screenOrientation="portrait"
			android:launchMode="singleTop">

			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>

			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
				<category android:name="android.intent.category.LEANBACK_LAUNCHER" />
			</intent-filter>
		</activity>

		<!-- 메인 MAME4droid 액티비티 - 런처 제거 -->
		<activity android:name="com.ingcorp.webhard.MAME4droid"
			android:configChanges="keyboardHidden|orientation|screenSize"
			android:launchMode="singleTask"
			android:exported="true"
			android:windowSoftInputMode="stateAlwaysHidden"
			android:theme="@style/Theme.MAME4droid">

			<!-- 파일 연결 인텐트 필터 -->
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="application/zip" />
				<data android:mimeType="application/x-7z-compressed"/>
				<data android:host="*" android:scheme="file" android:maxSdkVersion="23"/>
				<data android:host="*" android:scheme="content" />
			</intent-filter>
		</activity>

		<!-- 기존 액티비티들 -->
		<activity android:name="com.ingcorp.webhard.prefs.UserPreferences"
			android:theme="@style/Theme.MAME4droid.TitleBar"
			android:label="MAME4droid Settings"/>
		<activity android:name="com.ingcorp.webhard.WebHelpActivity"
			android:launchMode="singleTop"
			android:theme="@style/Theme.MAME4droid.TitleBar"
			android:label="MAME4droid Help"/>
		<activity android:name="com.ingcorp.webhard.prefs.DefineKeys"
			android:theme="@style/Theme.MAME4droid.TitleBar"
			android:label="MAME4droid Define Keys"/>
		<activity android:name="com.ingcorp.webhard.prefs.ListKeys"
			android:theme="@style/Theme.MAME4droid.TitleBar"
			android:label="MAME4droid Player Keys"/>
		<activity android:name="com.ingcorp.webhard.prefs.KeySelect"
			android:label="Select Key"
			android:theme="@android:style/Theme.Dialog"/>
	</application>

</manifest>