<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

	<!-- AppCompat 없이 기본 Android 테마만 사용하는 버전 -->

	<!-- 스플래시 전용 테마 - 기본 Android 테마 기반 -->
	<style name="SplashTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
		<item name="android:windowBackground">@color/splash_background</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
		<item name="android:windowContentOverlay">@null</item>
		<!-- API 21+ 에서만 적용 -->
		<item name="android:statusBarColor" tools:targetApi="lollipop">@color/splash_background</item>
		<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/splash_background</item>
		<!-- 노치 지원 (API 28+) -->
		<item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">shortEdges</item>
	</style>

	<!-- 메인 MAME4droid 테마 - 기존 스타일 유지 -->
	<style name="Theme.MAME4droid" parent="@android:style/Theme.NoTitleBar.Fullscreen">
		<!-- 기존 MAME4droid 테마 속성들 -->
		<item name="android:windowBackground">@android:color/black</item>
		<item name="android:windowFullscreen">true</item>
	</style>

	<!-- 타이틀바가 있는 테마 -->
	<style name="Theme.MAME4droid.TitleBar" parent="@android:style/Theme.DeviceDefault">
		<item name="android:windowActionBar">true</item>
		<item name="android:windowNoTitle">false</item>
	</style>

	<!-- 게임 앱용 다크 테마 - 기본 테마 기반 -->
	<style name="Theme.MAME4droid.Dark" parent="@android:style/Theme.DeviceDefault.NoActionBar">
		<item name="android:windowBackground">@color/dark_background</item>
		<item name="android:colorBackground" tools:targetApi="lollipop">@color/dark_background</item>
		<item name="android:textColorPrimary">@color/dark_text_primary</item>
		<item name="android:textColorSecondary">@color/dark_text_secondary</item>
		<item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_background</item>
		<item name="android:navigationBarColor" tools:targetApi="lollipop">@color/dark_background</item>
		<item name="android:colorPrimary" tools:targetApi="lollipop">@color/game_primary</item>
		<item name="android:colorAccent" tools:targetApi="lollipop">@color/game_secondary</item>
	</style>

	<!-- 스플래시 텍스트 스타일 -->
	<style name="SplashTextPrimary">
		<item name="android:textColor">@color/splash_text_primary</item>
		<item name="android:textSize">24sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
	</style>

	<style name="SplashTextSecondary">
		<item name="android:textColor">@color/splash_text_secondary</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
	</style>

</resources>